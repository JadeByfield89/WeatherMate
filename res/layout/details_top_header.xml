<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivDetailsAirlineImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@+id/tvDetailsMainHeader"
        android:src="@drawable/weathermate_airlineicon_default" >
    </ImageView>

    <TextView
        android:id="@+id/tvDetailsMainHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:shadowColor="#33000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="To and From"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/tvDetailsFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
         android:textColor="@android:color/white"
        android:layout_below="@+id/tvDetailsMainHeader"
        android:layout_toLeftOf="@+id/flightsDetailPB"
        android:text="From"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/tvDetailsTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
         android:textColor="@android:color/white"
        android:layout_below="@+id/tvDetailsMainHeader"
        android:layout_toRightOf="@+id/flightsDetailPB"
        android:text="Dest."
        android:textStyle="bold" >
    </TextView>

    <ProgressBar
        android:id="@+id/flightsDetailPB"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsMainHeader"
        android:layout_centerHorizontal="true" />


</RelativeLayout>