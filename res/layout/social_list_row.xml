<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivTwitterIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:background="@drawable/imageview_border"
         >
    </ImageView>

    <TextView
        android:id="@+id/tvTwitterUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignTop="@+id/ivTwitterIcon"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivTwitterIcon"
        android:text="Username"
        android:textColor="@android:color/white"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/tvTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTwitterUsername"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivTwitterIcon"
        android:text="This is an example of a sample tweet that a user would send."
        android:textColor="@android:color/white" >
    </TextView>

    <TextView
        android:id="@+id/tvTweetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTweet"
        
        android:layout_marginRight="5dp"
        android:text="tweet time."
        android:textColor="@drawable/color_yellow"
        android:textSize="10dp" >
    </TextView>

</RelativeLayout>