<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_panel_bg_nostroke"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvNewsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Label"
        android:textColor="@android:color/white"
        android:textSize="20sp" >
    </TextView>

    <EditText
        android:id="@+id/etNewsLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp" >
    </EditText>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/sidepanel_divider" >
    </View>

    <TextView
        android:id="@+id/tvNewsUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Website Url"
        android:textColor="@android:color/white"
        android:textSize="20sp" >
    </TextView>

    <EditText
        android:id="@+id/etNewsUrl"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="http://" >
    </EditText>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/sidepanel_divider" >
    </View>

</LinearLayout>