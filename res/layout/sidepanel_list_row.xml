<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgWeatherIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/tvCityName"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:src="@drawable/weather_icon_partlycloudy" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgWeatherIcon" >
    

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgWeatherIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:shadowColor="#33000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:singleLine="true"
        android:text="Location"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvRegion"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCityName"
        android:layout_below="@+id/tvCityName"
        android:layout_marginTop="-6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:shadowColor="#33000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:singleLine="true"
        android:text="Country, Region"
        android:textColor="@drawable/color_yellow"
        android:textSize="13sp" />
    
    </RelativeLayout>

</RelativeLayout>